{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "table-employee",
        "author": "Steve Rose",
        "changes": [
          {
            "createTable": {
              "tableName": "employee",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "uuid",
                    "constraints": {
                      "nullable": false
                    },
                    "defaultValueComputed": "uuid_generate_v4()"
                  }
                },
                {
                  "column": {
                    "name": "email",
                    "type": "text",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "department",
                    "type": "text"
                  }
                },
                {
                  "column": {
                    "name": "employmenttype",
                    "type": "varchar(16)",
                    "constraints": {
                      "nullable": false
                    },
                    "defaultValue": "FULL_TIME"
                  }
                },
                {
                  "column": {
                    "name": "workpattern",
                    "type": "varchar(16)",
                    "constraints": {
                      "nullable": false
                    },
                    "defaultValue": "HYBRID"
                  }
                },
                {
                  "column": {
                    "name": "officeid",
                    "type": "uuid"
                  }
                },
                {
                  "column": {
                    "name": "created_at",
                    "type": "timestamp without time zone",
                    "constraints": {
                      "nullable": false
                    },
                    "defaultValueComputed": "now()"
                  }
                },
                {
                  "column": {
                    "name": "updated_at",
                    "type": "timestamp without time zone",
                    "constraints": {
                      "nullable": false
                    },
                    "defaultValueComputed": "now()"
                  }
                }
              ]
            }
          },
          {
            "addPrimaryKey": {
              "tableName": "employee",
              "columnNames": "id",
              "constraintName": "pk_employee_id"
            }
          },
          {
            "addUniqueConstraint": {
              "tableName": "employee",
              "columnNames": "email",
              "constraintName": "uq_employee_email"
            }
          },
          {
            "createIndex": {
              "tableName": "employee",
              "indexName": "idx_employee_officeid",
              "columns": [
                {
                  "column": {
                    "name": "officeid"
                  }
                }
              ]
            }
          }
        ],
        "rollback": [
          {
            "dropTable": {
              "tableName": "employee",
              "cascadeConstraints": true
            }
          }
        ]
      }
    }
  ]
}
